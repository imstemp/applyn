{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["ES2020"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist-electron",
    "rootDir": ".",
    "resolveJsonModule": true
  },
  "include": ["electron/**/*"],
  "exclude": ["vite.config.ts"]
}

